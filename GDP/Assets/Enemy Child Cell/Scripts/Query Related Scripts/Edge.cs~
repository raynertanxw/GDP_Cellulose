using UnityEngine;
using System.Collections;

public class Edge 
{
	private Point Source;
	private Point Target;
	private float fCost;
	
	public Edge(Point _Start, Point _End, float _Cost)
	{
		Source = _Start;
		Target = _End;
		fCost = _Cost;
		//Utility.DrawLine(_Start.Position,_End.Position);
	}
	
	public Point Start
	{
		get{ return Source;}
		set{ Source = value;}
	}
	
	public Point End
	{
		get{ return End;}
		set{ End = value;}
	}
	
	public float Cost
	{
		get{ return fCost;}
		set{ fCost = value;}
	}
}
